# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_BASE_URL=http://localhost:5000/api

# Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# UI Configuration
REACT_APP_THEME_MODE=light
REACT_APP_DEFAULT_BATCH_SIZE=10
REACT_APP_MAX_BATCH_SIZE=50

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Polling Intervals (in milliseconds)
REACT_APP_JOB_POLLING_INTERVAL=5000
REACT_APP_STATS_POLLING_INTERVAL=10000

# Notification Settings
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_ENABLE_SOUND_NOTIFICATIONS=false

# Analytics (if enabled)
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here

# Error Reporting (if enabled)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Social Links
REACT_APP_COMPANY_NAME=Mintonaire.io
REACT_APP_COMPANY_URL=https://mintonaire.io
REACT_APP_SUPPORT_EMAIL=support@mintonaire.io
REACT_APP_TWITTER_URL=https://twitter.com/mintonaire
REACT_APP_DISCORD_URL=https://discord.gg/mintonaire

# Solana Configuration (for future wallet integration)
REACT_APP_SOLANA_NETWORK=devnet
REACT_APP_SOLANA_RPC_URL=https://api.devnet.solana.com

# Wallet Configuration
REACT_APP_ENABLE_WALLET_CONNECTION=false
REACT_APP_SUPPORTED_WALLETS=phantom,solflare,slope

# Image Display Settings
REACT_APP_IMAGE_PREVIEW_SIZE=300
REACT_APP_THUMBNAIL_SIZE=150
REACT_APP_ENABLE_IMAGE_LAZY_LOADING=true

# Performance Settings
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_CODE_SPLITTING=true

# Development Settings
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_LOG_LEVEL=debug

# Build Settings
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false